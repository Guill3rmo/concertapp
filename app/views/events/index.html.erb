<h1>Available Events/Concerts</h1>

  <table class = "table table-hover">
      <br>
       <% if user_signed_in? %>
        <%= link_to 'add new event', new_event_path %>
        <% end %>
     </div>
     <tr>
       <th>Created by:</th>
       <th>Event</th>
       <th>Time</th>
       <th>Date</th>
       <th>Price</th>
       <th>Description</th>
       <th>Details</th>
       <th>Edit</th>
       <th>Destroy</th>
     </tr>
    
   <% @events.each do |event| %>
     <tr>
      <td><%= event.user.user_name %></td>
       <td><%= event.artist  %><br><%= image_tag event.picture.url(:thumb) %></td>
       <td><%= event.time %></td>
       <td><%= event.date %></td>
       <td><%= event.price  %></td>
       <td><%= event.description  %></td>
      <% if user_signed_in? %>
        <td><%= link_to 'Details', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Destroy', event, :confirm => 'Are you sure?',:method => :delete %></td>
      <% else %>
        <td></td>
        <td></td>
        <td></td>
      <% end %>
     </tr>
   <% end %>
   </table>


 
